<div class="flex justify-between items-end">
    <div class= "container flex flex-col space-y-4 ">
        <%= link_to sanitize("&larr; Back to Communities"), communities_path %>
        <h1 class="text-2xl font-bold text-left"> <%= @community.name %> </h1>
    </div>
    <%= link_to "Add Post", new_community_post_path(@community), data: {turbo_frame: dom_id(Post.new)},class: " px-4 py-2 rounded-lg bg-primary" %>
</div>

<%= turbo_frame_tag Post.new %>

<%=turbo_frame_tag nested_dom_id(@community,"posts"), class:"flex flex-col gap-2 lg:gap-4" do%>
    <%= render @posts, community: @community%>
<% end %>

