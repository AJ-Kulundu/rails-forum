<div class="flex flex-col w-full items-center space-y-4 p-4 md:space-y-6">
<h2 class="text-center text-2xl font-bold tracking-tight">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "block w-full min-w-1/4 rounded-lg border-0 py-1.5 text-black shadow-sm ring-1 ring-inset ring-black placeholder:text-black focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6" %>
  </div>

  <div class="mb-4">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "block w-full min-w-1/4 rounded-lg border-0 py-1.5 text-black shadow-sm ring-1 ring-inset ring-black placeholder:text-black focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full min-w-1/4 rounded-lg border-0 py-1.5 text-black shadow-sm ring-1 ring-inset ring-black placeholder:text-black focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6" %>
  </div>

  <div class="flex justify-center py-2 w-full rounded-lg bg-primary font-semibold">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<div class="relative flex items-center">
    <div class="flex-grow border-t border-black"></div>
    <span class="flex-shrink mx-4 text-black">Or</span>
    <div class="flex-grow border-t border-black"></div>
</div>

<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name),class:"flex justify-center py-2  rounded-lg font-semibold" %><br />
<% end %>
</div>
